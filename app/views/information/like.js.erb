<% if @has_voted %>
  $("#favorite-icon").removeClass("fa-heart-o");
  $("#favorite-icon").addClass("fa-heart");
  $('#favorite-icon').animo( { animation: ['tada'], duration: 2 } );
<% else %>
  $("#favorite-icon").removeClass("fa-heart");
  $("#favorite-icon").addClass("fa-heart-o");
  $('#favorite-icon').animo( { animation: ['tada', 'bounce'], duration: 2 } );
<% end %>

$(".like-count").html('<%= @likes %>');